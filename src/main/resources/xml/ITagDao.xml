<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blogspot.danserlesgens.personalblogspringboot.dao.ITagDao">
    <!--resultMap里的id写返回结果集，以键值对得方式返回，type里写model得别名，映射类  -->
    <resultMap id="TagResultMap" type="Tag">
        <!-- 这里的id为主键 ,result为返回结果，property为model对应得字段别名，column表里得字段名 -->
        <id property="id" column="TID"/>
        <result property="tag" column="TAG"/>
    </resultMap>

    <!--parameterType：设置别名 useGeneratedKeys="true" keyProperty="no"表里自增 ，这里得设置方法-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into tag (TAG)
        values (#{tag});
    </insert>

    <insert id="insertTags" >
        insert into article_tag (AID,TID) values
        <foreach item="tm" collection="tms" separator=",">
            (#{aid},#{tm.id})
        </foreach>
    </insert>

    <update id="update">
        update tag set TAG = #{tag} where TID = #{id};
    </update>

    <delete id="delete">
        delete from tag where Tag = #{tag};
    </delete>

    <delete id="deleteTags">
        delete from article_tag where AID = #{aid} and TID  in (
        <foreach  item="atm" collection="aTms" separator=",">
            #{atm.id}
        </foreach>
        )
    </delete>

    <select id="selectIdByName" resultType="int">
        select TID from tag
        where TAG = #{tagName}
    </select>

    <select id="selectListByArticle" resultMap="TagResultMap">
        select tag.* from tag inner join article_tag on tag.TID = article_tag.TID
        where AID = #{aid}
        order by TAG;
    </select>

    <select id="selectListByAll" resultMap="TagResultMap">
        select * from tag
        order by TAG;
    </select>

    <select id="isExist" resultType="int">
        select count(TID) from tag
        where TAG = #{tag};
    </select>

    <select id="isRelationExist" resultType="int">
        select count(*) from article_tag
        where AID =#{aid} and TID = #{tid};
    </select>
</mapper>